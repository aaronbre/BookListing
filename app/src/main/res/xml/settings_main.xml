<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_book_limit_default"

        android:inputType="numberDecimal"
        android:key="@string/settings_book_limit_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_book_limit_label" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:title="@string/settings_purchaseable_only_label"
        android:key="@string/settings_purchaseable_key"/>

</PreferenceScreen>